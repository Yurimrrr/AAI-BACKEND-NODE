<br>
<div class="row">
    <div class="col-12 float-left">
        <a href="/addBankAccount" class="btn btn-success float-right"><i class="bi bi-plus-circle"></i> Adicionar nova conta de banco</a>
    </div>
</div>
<br>
<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-8">
                <h4 class="font-weight-bold">Todas as contas bancarias</h4>
            </div>
        </div>
    </div>
    <div class="card-body">
        <table class="table table-hover">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Número</th>
                    <th scope="col">Saldo</th>
                    <th scope="col">Usuario</th>
                    <th scope="col">Ações</th>
                </tr>
            </thead>
            <tbody>
                <% if(bankAccounts.length > 0) { %>
                    <% for(let bankAccount of bankAccounts) { %>
                        <tr>
                            <th scope="row">
                                <%= bankAccount.number %>
                            </th>
                            <td>
                                <%= bankAccount.balance %>
                            </td>
                            <td>
                                <%= bankAccount.customer %>
                            </td>
                            <!-- <td><%= bankAccount.address %></td> -->
                            <td>
                                <a href="/viewBankAccount/<%= bankAccount._id %>" class="btn btn-sm btn-warning"><i class="bi bi-arrows-fullscreen"></i></a>
                                <a href="/deleteBankAccount/<%= bankAccount._id %>" class="btn btn-sm btn-warning"><i class="bi bi-trash"></i></a>
                            </td>
                        </tr>
                        <% } %>
                            <% } else { %>
                                <tr>
                                    <td>Nenhum usuario encontrado</td>
                                </tr>
                                <% } %>
            </tbody>
        </table>
    </div>
</div>

<div class="row">
    <div class="col-4 float-right">
        <br>
        <a href="/" class="btn btn-success float-right">Voltar ao inicio</a>
        <br>
    </div>
</div>